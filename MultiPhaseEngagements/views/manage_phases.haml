.col-md-10
  %br
  %h2 Manage Available Engagements Phases
  %br

  %form{:method => 'post', :action => '/MultiPhase/admin/add'}
    %input{ :type => "text", :name => "phase_title" }
    %input.btn.btn-default{ :type => "submit", :value => "Add" }

  .table.table-striped#mytable
    %table{ :style => "width: 80%" }
      %thead
        %tr
          %th{ :style => "width: 60%" }
            Phase Title
          %th{ :style => "width: 20%" }
      %tbody
        - @phases.each do |phase|
          %tr
            %td{ :style => "width: 80%" }
              #{phase.title}
            %td{ :style => "width: 20%" }
              %a.btn.btn-danger{ :style => "float: right", :href => "/MultiPhase/admin/delete?phase_id=#{phase.id}" }
                %i.icon-remove.icon-white{ :title => "Delete" }

  %br
  %a.btn.btn-default{ :href => "/" }
    Cancel
